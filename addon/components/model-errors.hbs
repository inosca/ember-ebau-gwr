<ModelErrors::Header
  @noHeader={{@noHeader}}
  @model={{@model}}
  @isRunning={{not @errorModel}}
  @errors={{@errorModel.errorList}}
  @modelId={{@modelId}}
  @linkRoute={{@linkRoute}}
  @linkModels={{@linkModels}}
  @modelDescription={{@modelDescription}}
  @smallHeaderIdWidth={{@smallHeaderIdWidth}}
>
  {{#let
    (component
      "model-errors/list"
      errors=@errorModel.errorList
      isRunning=(not @errorModel)
    )
    as |List|
  }}
    {{#if (has-block)}}
      {{yield List}}
    {{else}}
      <List />
    {{/if}}
  {{/let}}
</ModelErrors::Header>