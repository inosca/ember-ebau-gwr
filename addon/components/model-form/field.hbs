<div class="{{unless @noMargin "uk-margin"}}">
  {{#let
    (component
      @input
      label=(unless @noLabel (t (or @label (concat @translationBase "." @attr))))
      name=@attr
      inputName=@inputName
      hint=@hint
      type=(or @type @inputType)
      disabled=(or @disabled this.disableInput)
      required=@required
      value=(or @value (get @model @attr))
      validateBeforeSubmit=true
      auto-complete=@auto-complete
      placeholder=@placeholder
      autofocus=@autofocus
      rows=@rows
      cols=@cols
      options=this.options
      optionLabelPath=(if @gwrEnumOptions "label" @optionLabelPath)
      optionTargetPath=(if @gwrEnumOptions "value" @optionTargetPath)
      optionValuePath=@optionValuePath
      includeBlank=(unless
        @noPlaceholder
        (t
          (concat (or @label (concat @translationBase "." @attr)) "Placeholder")
        )
      )
      promptIsSelectable=true
      on-update=(if
        @on-update
        (queue (fn this.updateModelField @attr) @on-update)
        (fn this.updateModelField @attr)
      )
      renderComponent=(component
        this.fieldComponent
        horizontal=this.isHorizontal
        step=@step
        min=@min
        max=@max
      )
    )
    as |InputComponent|
  }}
    {{#if this.showDiff}}
      <ModelForm::Diff
        @inputComponent={{InputComponent}}
        @current={{get @model @attr}}
        @new={{get @importData @attr}}
        @updateModelField={{fn this.updateModelField @attr}}
        @horizontal={{this.isHorizontal}}
      />
    {{else}}
      <InputComponent ...attributes />
    {{/if}}
  {{/let}}
</div>
